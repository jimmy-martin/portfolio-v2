{% extends "back/base.html.twig" %}

{% block title %}
	Accueil -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="col-12 mb-5">
		<h1 class="mb-3">
			Backoffice du portfolio de Jimmy
		</h1>

		<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
			<a href="{{ path('back_project_browse') }}" type="button" class="btn btn-info">Projets</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
					<a class="dropdown-item" href="{{ path('back_project_add') }}">Ajouter un projet</a>
				</div>
			</div>
		</div>

		<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
			<a href="{{ path('back_category_browse') }}" type="button" class="btn btn-light">Catégories</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop2" type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				<div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
					<a class="dropdown-item" href="{{ path('back_category_add') }}">Ajouter une catégorie</a>
				</div>
			</div>
		</div>

		<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
			<a href="{{ path('back_operating_system_browse') }}" type="button" class="btn btn-info">Systèmes d'exploitation</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop3" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				<div class="dropdown-menu" aria-labelledby="btnGroupDrop3">
					<a class="dropdown-item" href="{{ path('back_operating_system_add') }}">Ajouter un système d'exploitation</a>
				</div>
			</div>
		</div>

		<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
			<a href="{{ path('back_skill_browse') }}" type="button" class="btn btn-light">Compétences</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop4" type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				<div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
					<a class="dropdown-item" href="{{ path('back_skill_add') }}">Ajouter une compétence</a>
				</div>
			</div>
		</div>

		<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
			<a href="{{ path('back_software_browse') }}" type="button" class="btn btn-info">Logiciels</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop4" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				<div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
					<a class="dropdown-item" href="{{ path('back_software_add') }}">Ajouter un logiciel</a>
				</div>
			</div>
		</div>
	</div>

	<div class="col-7">

		<h3>Nom d'utilisateur</h3>
		<p>{{ user.username }}</p>

		<h3>Profil</h3>
		<p>{{ user.profil }}</p>

		<h3>Présentation</h3>
		<p>{{ user.presentation | nl2br() }}</p>

	</div>
	<div class="col-5">
		<h3>Image</h3>
		<img src="{{ asset('assets/img/' ~ user.image) }}" alt="" class="img-fluid">

		<h3 class="mt-2">Liens</h3>
		<ul>
			<li>Linkedin :
				<a href="{{ user.linkedin }}" target="_blank">{{ user.linkedin }}</a>
			</li>
			<li>Twitter :
				<a href="{{ user.twitter }}" target="_blank">{{ user.twitter }}</a>
			</li>
			<li>Adresse mail :
				{{ user.email }}</li>
			<li>GitHub :
				<a href="{{ user.github }}" target="_blank">{{ user.github }}</a>
			</li>
		</ul>

		<a href="{{ path('back_user_edit', {id: user.id}) }}" class="btn btn-warning mt-4 text-dark">Modifier mon profil</a>


	</div>
{% endblock %}
