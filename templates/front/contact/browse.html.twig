{% extends 'front/base.html.twig' %}

{% block title %}
	Contact -
	{{ parent() }}
{% endblock %}

{% block body %}
	<!-- ======= Contact Section ======= -->
	<section id="contact" class="paralax-mf footer-paralax bg-image sect-mt4 route mt-0" style="background-image: url({{ asset('assets/img/overlay-bg.jpg') }})">
		<div class="overlay-mf"></div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="contact-mf">
						<div id="contact" class="box-shadow-full">
							{% include "front/partials/_flash.html.twig" %}
							<div class="row">
								<div class="col-md-6">
									<div class="title-box-2">
										<h5 class="title-left">
											M'envoyer un mail
										</h5>
									</div>
									<div>
										{{ form_start(form) }}

										{{ form_row(form.name) }}
										{{ form_row(form.email) }}
										{{ form_row(form.subject) }}
										{{ form_row(form.message) }}

										<div class="col-md-12 text-center my-3">
											<button type="submit" class="button button-a button-big button-rouded">Envoyer votre message</button>
										</div>

										{{ form_end(form) }}
									</div>
								</div>
								<div class="col-md-6">
									<div class="title-box-2 pt-4 pt-md-0">
										<h5 class="title-left">
											Plus d'infos
										</h5>
									</div>
									<div class="more-info">
										<p class="lead">
											Envie de me contacter via mes réseaux sociaux, ou autrement que par mon formulaire ?
										</p>
										<p class="lead">
											Cliquer sur les liens juste en dessous et vous serez redirigé.
										</p>
									</div>
									<div class="socials">
										<ul>
											<li>
												<a href="{{ user.linkedin }}">
													<span class="ico-circle">
														<i class="bi bi-linkedin"></i>
													</span>
												</a>
											</li>
											<li>
												<a href="{{ user.twitter }}">
													<span class="ico-circle">
														<i class="bi bi-twitter"></i>
													</span>
												</a>
											</li>
											<li>
												<a href="mailto:{{ user.email }}">
													<span class="ico-circle">
														<i class="bi bi-envelope-fill"></i>
													</span>
												</a>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Contact Section -->
{% endblock %}
